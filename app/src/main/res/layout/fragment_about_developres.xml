<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutDevelopresActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60sp">

                <!-- TODO: Update blank fragment layout -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designed And Developed By"
                    android:id="@+id/rajath_title"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_marginTop="30sp"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_rajath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/rajath_title">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:src="@drawable/profile_pic_rajath"
                            android:foregroundGravity="center"
                            android:id="@+id/profile_pic_1"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="Rajath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/textView1"
                        android:textColor="#000000"
                        android:paddingTop="5sp"
                        android:layout_below="@+id/profile_pic_1"
                        android:fontFamily="serif"/>

                     <TextView
                        android:text="ykrajath4@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/textView1"
                        android:layout_centerHorizontal="true"
                        />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Members"
                android:id="@+id/team_member_title"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_marginTop="30sp"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_below="@+id/card_view_rajath"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_hari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/team_member_title">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:src="@drawable/profile_pic_hari"
                            android:foregroundGravity="center"
                            android:id="@+id/profile_pic_2"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:text="Haripriya Aithal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/textView3"
                            android:textColor="#000000"
                            android:paddingTop="5sp"
                            android:fontFamily="serif"
                            android:layout_below="@+id/profile_pic_2"/>

                        <TextView
                            android:text="haripriyaaithal@gmail.com"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:id="@+id/textView4"
                            android:layout_below="@+id/textView3"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_vishnu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/card_view_hari"
                    android:layout_marginBottom="10sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10sp"
                        >

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:src="@drawable/profile_pic_vishnu"
                            android:foregroundGravity="center"
                            android:id="@+id/profile_pic_3"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:text="Shrivishnu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:id="@+id/textView5"
                            android:textColor="#000000"
                            android:paddingTop="5sp"
                            android:fontFamily="serif"
                            android:layout_below="@+id/profile_pic_3"/>

                        <TextView
                            android:text="srivishnu31@gmail.com"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:id="@+id/textView6"
                            android:layout_below="@+id/textView5"
                            android:paddingBottom="10sp"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>

</RelativeLayout>




    </ScrollView>



</RelativeLayout>
